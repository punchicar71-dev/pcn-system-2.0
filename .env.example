# PCN System Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# AWS S3 Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Text.lk SMS Gateway Configuration
TEXTLK_API_TOKEN=your-textlk-api-token
TEXTLK_API_URL=https://app.text.lk/api/v3/sms/send
TEXTLK_SENDER_ID=your-approved-sender-id

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:4000
