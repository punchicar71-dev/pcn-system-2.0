{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build --workspace=pcn-web"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run start --workspace=pcn-web",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
