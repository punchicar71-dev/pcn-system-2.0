# ============================================
# RAILWAY DEPLOYMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# These override docker-compose defaults in production

# Supabase Configuration (Keep same as local)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# AWS S3 Configuration - REQUIRED FOR IMAGE UPLOADS
# ⚠️  CRITICAL: These must be set or image uploads will fail
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY_HERE
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_CLOUDFRONT_URL=

# API URLs - IMPORTANT FOR PRODUCTION
# For local Docker: API_SERVER_URL=http://pcn-api:4000
# For Railway: API_SERVER_URL should be the internal service URL or public API URL
API_SERVER_URL=http://pcn-api:4000
NEXT_PUBLIC_API_URL=http://localhost:4000

# CORS Configuration - CRITICAL FOR PRODUCTION
# List all frontend URLs separated by commas
# For local Docker: http://localhost:3001,http://localhost:3002
# For Railway: Include your Railway public domain URLs
CORS_ORIGIN=http://localhost:3001,http://localhost:3002

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your Company Name

# SMS Service (Text.lk)
TEXTLK_API_TOKEN=your_textlk_api_token_here
TEXTLK_API_URL=https://app.text.lk/api/v3/sms/send
TEXTLK_SENDER_ID=YourSenderID

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-here-min-32-characters

# Node Environment
NODE_ENV=production
PORT=4000
