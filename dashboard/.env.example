# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (KEEP THIS SECRET - Only for server-side operations)
# This is needed for the create-root-admin script and email sending
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# API Configuration
# For production, use your Railway API URL: https://pcn-api-production.up.railway.app
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Email Configuration (Using Supabase Built-in SMTP)
# No additional configuration needed! 
# Supabase SMTP is enabled by default.
# To customize emails, go to: Supabase Dashboard → Authentication → Email Templates

# Text.lk SMS Gateway Configuration (REQUIRED for SMS notifications)
# Get your credentials from: https://app.text.lk → Developers
# API Token: Found on the Developers page
# Sender ID: Request from Text.lk "Sender ID" menu (requires approval)
TEXTLK_API_TOKEN=your_textlk_api_token_here
TEXTLK_API_URL=https://app.text.lk/api/v3/sms/send
TEXTLK_SENDER_ID=your_approved_sender_id_here

# Resend Email Configuration (REQUIRED for email notifications)
# Get your API key from: https://resend.com/api-keys
# Verify your domain at: https://resend.com/domains
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Punchi Car Niwasa

