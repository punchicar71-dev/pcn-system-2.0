{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd /app && npm ci --workspace=pcn-api --include-workspace-root && npm run build --workspace=pcn-api",
    "watchPatterns": ["api/**", "shared/**", "package.json", "package-lock.json"]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd /app && node api/dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
